<header class="navbar navbar-dark bg-dark navbar-fixed-top">
  <div class="container-fluid">
    <%= link_to "現場マッチ", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right list-group list-group-horizontal">
        <% if logged_in? %>
            <li><%= link_to "Users", "#" %></li>
            <li class="dropdown">
              <a href="#"  data-toggle="dropdown">
                <%# Account <b class="caret"></b> %>
                <% if current_user.profile_image.url.nil? %>
                  <div class="profile-default-img"></div>
                <% else %>
                  <%= image_tag current_user.profile_image.url, class: "profile-img" %>
                <% end %>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", user_path(id: current_user) %></li>
                <li><%= link_to "Settings", edit_user_registration_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", destroy_user_session_path, method: :delete %>
                </li>
              </ul>
            </li>
        <% else %>
          <li><%= link_to "新規登録", new_user_registration_path %></li>
          <li><%= link_to "ログイン", user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>