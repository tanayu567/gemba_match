<ul class="worker-details"> 
  <div class="profile-list d-flex flex-row align-items-center">
    <% if user.profile_image.url.nil? %>
      <div class="profile-list-default-img"></div>
    <% else %>
      <div><%= image_tag user.profile_image.url, class: "profile-list-img" %></div>
    <% end %>
    <div class="profile-list-name">
      <ul>
        <li>
          <%= link_to "#{user.name}", user, class: "worker-name" %>
          <% if logged_in? && current_user.admin? && !current_user?(user) %>
            <%= link_to "　　削除する", user, method: :delete,
                                  data: { confirm: "本当に削除しますか？" } %>
          <% end %>
        </li>
        <li>経験年数 <%= user.experience %>年</li>
        
      </ul>
    </div>
  </div>
</ul>
