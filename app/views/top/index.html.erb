<div class="index">
  <div class="center jumbotron"> 
    <div class="serchall">  
      <% if !(logged_in?) || (current_user.id == 6 || current_user.profession == "worker") %>
        <div class="searchall-form">
          <%= form_with url: search_spots_path, local: true, method: :get do |form| %>
            <%= form.text_field :keyword, placeholder: "現場を検索する" %>
            <%= form.submit "検索" %>
          <% end %>
        </div>
      <% end %>
      <% if !(logged_in?) || (current_user.id == 6 || current_user.profession == "company") %>
      <div class="searchall-form">
        <%= form_with url: search_users_path, local: true, method: :get do |form| %>
          <%= form.text_field :keyword, placeholder: "職人を検索する" %>
          <%= form.submit "検索" %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>

  <div class="container px-3">
    <div class="row mx-n5">
      <div class="col px-4">
        <div class="p-3 border bg-light">
          <p class="listtitle">新着現場一覧</p>
          <div class="new-spots">
            <%= render @spots %>
          </div>
        </div>  
      </div>
      <div class="col px-4">
        <div class="p-3 border bg-light">
          <p class="listtitle">新規職人一覧</p>   
          <div class="new-woker">
            <%= render @users %>   
          </div>    
        </div>
      </div>
    </div>
  </div>

  
</div>

